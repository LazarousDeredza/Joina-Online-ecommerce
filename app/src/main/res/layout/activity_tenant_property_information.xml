<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Tenants.TenantInterface.TenantPropertyInformationActivity"
    >

  <RelativeLayout
      android:id="@+id/top"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_140sdp"
      android:background="@drawable/ten">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:fontFamily="@font/app_font"
        android:shadowColor="@color/black"
        android:text="Tenants"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_1sdp"
        android:fontFamily="@font/app_font"
        android:shadowColor="@color/black"
        android:text="Tenant Portal"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:textStyle="italic" />

  </RelativeLayout>

  <androidx.core.widget.NestedScrollView
      android:id="@+id/middleScrollView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/top"
      android:layout_marginBottom="50dp"
      android:background="@drawable/x">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="15dp"
          android:alpha="0.9"
          app:cardBackgroundColor="@color/card_background"
          app:cardCornerRadius="8dp"
          >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <LinearLayout
              android:id="@+id/card1hori"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/card1v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/nametenant"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tenant:"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_10sdp" />


              <TextView
                  android:id="@+id/businessType"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Business\nType"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_10sdp" />

              <TextView
                  android:id="@+id/startDate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Start Date:"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_10sdp" />

              <TextView
                  android:id="@+id/propertyType"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Property Type"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_10sdp" />

              <TextView
                  android:id="@+id/Propertyowner"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Property Owner"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_10sdp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/card1v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/NameOftenant"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="CICOSY"
                  android:textColor="#fc8c2c"
                  android:textSize="@dimen/_10sdp"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/BusinessType"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="TECH\n"
                  android:textColor="#fc8c2c"
                  android:textSize="@dimen/_10sdp"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/StartDate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="01/02/22"
                  android:textColor="#fc8c2c"
                  android:textSize="@dimen/_10sdp"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/PropertyType"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Building"
                  android:textColor="#fc8c2c"
                  android:textSize="@dimen/_10sdp"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/PropertyOwner"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="J.Johns"
                  android:textColor="#fc8c2c"
                  android:textSize="@dimen/_10sdp"
                  android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card1v3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/shopNumber"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Shop Number"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_10sdp" />

              <TextView
                  android:id="@+id/floorNumber"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/nametenant"
                  android:text="Floor Area:\n"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_10sdp" />

              <TextView
                  android:id="@+id/expiryDate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Expiry Date"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card1v4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


              <TextView
                  android:id="@+id/ShopNumber"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="15"
                  android:textColor="#fc8c2c"
                  android:textSize="@dimen/_10sdp"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/FloorNumber"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="10th\n"
                  android:textColor="#fc8c2c"
                  android:textSize="@dimen/_10sdp"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/ExpiryDate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="28/02/22"
                  android:textColor="#fc8c2c"
                  android:textSize="@dimen/_10sdp"
                  android:textStyle="bold" />
            </LinearLayout>
          </LinearLayout>


          <View
              android:id="@+id/viewhori1"
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_below="@+id/card1hori"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_marginRight="@dimen/_10sdp"
              android:layout_marginBottom="10dp"
              android:background="#fc8c2c"

              />

          <LinearLayout
              android:id="@+id/priceLayout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/viewhori1"
              android:layout_centerHorizontal="true"
              android:orientation="horizontal">

            <TextView
                android:id="@+id/rentalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Rental Price:"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rentalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="$500"
                android:textColor="#fc8c2c"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

          </LinearLayout>

          <View
              android:id="@+id/viewhori2"
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_below="@+id/priceLayout"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_marginTop="10dp"
              android:layout_marginRight="@dimen/_10sdp"
              android:layout_marginBottom="10dp"
              android:background="#fc8c2c"

              />

          <LinearLayout
              android:id="@+id/businessDescriptionLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/viewhori2"
              android:layout_centerHorizontal="true"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_marginRight="@dimen/_10sdp"
              android:orientation="vertical"

              >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business Description"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CICOSY Pvt Ltd  is one of the worldâ€™s leaders in warehouse and supply chain software and business and data analytics solutions. We make your business more efficient, more predictable and more effective. Turning complex challenges into easy-to-use solutions."
                android:textColor="@color/black" />

          </LinearLayout>

          <View
              android:id="@+id/viewhori3"
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_below="@+id/businessDescriptionLayout"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_marginTop="10dp"
              android:layout_marginRight="@dimen/_10sdp"
              android:layout_marginBottom="10dp"
              android:background="#fc8c2c"

              />

          <LinearLayout
              android:id="@+id/card1bottomleft"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/viewhori3"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="15dp"
              android:layout_marginRight="10dp"
              android:layout_marginBottom="20dp"
              android:orientation="horizontal">

            <TextView
                android:id="@+id/licencestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Licence Status:"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/licenceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="upto date"
                android:textColor="#fc8c2c"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/insuranceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Insurance Status"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/insurancestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="upto date"
                android:textColor="#fc8c2c"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />

          </LinearLayout>





        </RelativeLayout>
      </com.google.android.material.card.MaterialCardView>


      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="15dp"
          android:layout_below="@+id/card1"
          android:alpha="0.9"
          app:cardBackgroundColor="@color/card_background"
          app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <TextView
              android:id="@+id/propertyStatusTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="20dp"
              android:text="Property Status"
              android:textColor="@color/black"
              android:textSize="@dimen/_11sdp"
              android:textStyle="bold"

              />

          <LinearLayout
              android:id="@+id/buttons2"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/propertyStatusTitle"
              android:orientation="horizontal"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:src="@drawable/barcelos"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:src="@drawable/amusements"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:src="@drawable/barcelos"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:src="@drawable/amusements"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
          </LinearLayout>


          <androidx.appcompat.widget.AppCompatButton

              android:id="@+id/downloadlease"
              android:layout_width="wrap_content"
              android:layout_height="48dp"
              android:layout_below="@id/buttons2"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="20dp"
              android:background="#fc8c2c"
              android:clickable="true"
              android:text="Upload"
              android:textSize="@dimen/_10sdp" />


        </RelativeLayout>
      </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

  </androidx.core.widget.NestedScrollView>
  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/navigation"
      android:layout_alignParentBottom="true"
      android:background="@drawable/ff"
      app:itemRippleColor="@color/white"
      app:itemIconTint="@color/black"
      android:alpha="0.8"
      app:itemTextColor="#424242"
      app:labelVisibilityMode="selected"
      app:menu="@menu/bottom_navigation_menu"
      android:layout_width="match_parent"
      android:layout_height="50dp"/>
</RelativeLayout>



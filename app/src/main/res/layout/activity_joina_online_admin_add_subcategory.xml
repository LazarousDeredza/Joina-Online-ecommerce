<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".JoinaonlineAdmin.CategoryRequests.JoinaOnlineAdminAddSubcategoryActivity">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="Add New Subcategory"
    android:background="@color/primary"
    app:navigationIcon="@drawable/back"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:paddingBottom="10dp"
    android:scrollbars="none"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">



    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:text="Subcategory Details"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@color/primary"
        android:padding="10dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/subcategoryName"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subcategory Name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp">
      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/subcategory_Name"
          android:inputType="textImeMultiLine"
          />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:padding="8dp"
        android:text="Category"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/spCategory"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:id="@+id/subcategoryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subcategory Description"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp">
      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/subcategory_Description"
          />
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Subcategory"
        android:backgroundTint="@color/primary"
        android:padding="@dimen/_12sdp"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:id="@+id/btnSaveSubcategory"/>


  </LinearLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
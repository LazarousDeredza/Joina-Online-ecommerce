<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Joinaonline.directory.DirectoryFragment">

    <View
        android:id="@id/view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/explore"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_14sdp"
        android:fontFamily="@font/homemade_apple"
        android:gravity="center"
        android:text="Follow the arrows"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        app:cardElevation="0dp"
        android:layout_below="@+id/view"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/indoor"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/card1"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/grad_background3"
        android:text="Destination"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:fontFamily="@font/app_font_bold"
        android:textAllCaps="true"
        app:cornerRadius="0dp"/>

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/destination"
        android:layout_marginHorizontal="19.50dp"
        app:iss_auto_cycle="true"
        app:iss_delay="0"
        app:iss_error_image="@drawable/cs5"
        app:iss_period="1000"
        app:iss_placeholder="@drawable/cs5" />

</RelativeLayout>